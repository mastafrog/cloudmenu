.header(ng-controller='NavbarCtrl').navbar.container
  ul.nav.nav-pills.pull-right
    li(ng-show='currentUser', ng-class='{active: isActive("/userdash")}')
      a(href='userdash', ng-click='') Dashboard
    li(ng-repeat='item in menu', ng-class='{active: isActive(item.link)}')
      a(ng-href='{{item.link}}') {{item.title}}
    li(ng-hide='currentUser', ng-class='{active: isActive("/login")}')
      a(href='/login') Login
    li(ng-hide='currentUser', ng-class='{active: isActive("/signup")}')
      a(href='/signup') Sign up
    li(ng-show='currentUser', ng-class='{active: isActive("/settings")}')
      a(href='/settings', ng-click='') Settings
    li(ng-show='currentUser', ng-class='{active: isActive("/logout")}')
      a(href='', ng-click='logout()') Logout
  h3.text-muted.navbar-brand
    a(href='/') 
      span.glyphicon.glyphicon-cloud-upload 
      |  CloudMenu